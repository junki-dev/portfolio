{
  "appenders": { 
    "app": {
      "type": "dateFile",
      "filename": "./log/server.log",
      "maxLogSize": 10485760,
      "backups": 10,
      "pattern": "yyyy-MM-dd",
      "daysToKeep": 30,
      "layout": {
        "type": "pattern",
        "pattern": "%d{yyyy/MM/dd-hh:mm:ss} [%p]  %m%n"
        
      }
    }
  },
  "categories": { 
    "default": { 
      "appenders": ["app"], "level": "INFO" 
    } 
  }
}