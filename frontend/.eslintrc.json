{
  "plugins": ["prettier"],
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true
      }
  },
  "env": {
      "browser": true,
      "node": true, 
      "commonjs": true, 
      "es2021": true
  },
  "ignorePatterns": ["node_modules/"],
  "rules": {
      "prettier/prettier": "error"
  }
}